# =============================================================================
# Nginx Location Block for UniFi Network Server
# =============================================================================
#
# This location block proxies requests to the UniFi Network Server running on port 8443.
# It handles HTTPS proxying with WebSocket support for real-time communication.
# Configured for subpath access at /{{ unifi_nginx_path }}/
#
# Requirements:
#   - UniFi Network Server installed and running on localhost:8443
#   - Included in main server block via: include config.d/{{ nginx_server_name }}-*.conf
#
# Security Notes:
#   - Only accessible through the parent server block's SSL configuration
#   - Self-signed certificate verification disabled for UniFi's default cert
#
# Author: Generated by Ansible
# =============================================================================

location ^~ /{{ unifi_nginx_path }} {
    # Remove the /{{ unifi_nginx_path }} prefix when proxying to UniFi
    rewrite ^/{{ unifi_nginx_path }}/?(.*) /$1 break;

    # Proxy to UniFi on HTTPS port 8443
    proxy_pass https://127.0.0.1:8443;
    
    # Essential proxy headers
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $server_name;
    proxy_set_header X-Forwarded-Server $host;
    
    # WebSocket support for real-time updates
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    
    # SSL settings for UniFi's self-signed certificate
    proxy_ssl_verify off;
    proxy_ssl_server_name on;
    
    # Timeouts for long-running connections
    proxy_connect_timeout 60s;
    proxy_send_timeout 300s;
    proxy_read_timeout 300s;
    
    # Buffer settings optimized for UniFi
    proxy_buffering off;
    proxy_request_buffering off;
    proxy_buffer_size 128k;
    proxy_buffers 4 256k;
    proxy_busy_buffers_size 256k;
    
    # Allow large request bodies for firmware uploads
    client_max_body_size 0;
}

