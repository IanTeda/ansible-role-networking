# ===============================================================================
# Homepage Dashboard Environment Configuration Template (Ansible Managed)
# -------------------------------------------------------------------------------
#
# This environment config file contains environment variables for the Homepage 
# dashboard application. It is generated and deployed by Ansible and should not 
# be manually edited as changes will be overwritten.
#
# Features & Configuration:
#   - Runtime environment settings (NODE_ENV, PORT, HOSTNAME)
#   - Homepage-specific variables (title, theme, description)
#   - Security settings (allowed hosts)
#   - Logging configuration
#   - Optional API keys for integrations
#
# Variables (set by Ansible):
#   - homepage.port: Port for Homepage to listen on
#   - homepage.hostname: Hostname for Homepage service
#   - homepage.allowed_hosts: Comma-separated list of allowed hosts
#   - homepage.title: Dashboard title
#   - homepage.theme: UI theme (dark/light)
#   - homepage.description: Dashboard description
#   - homepage.log_level: Logging level (info/debug/error)
#
# Usage:
#   - Deployed to {{ homepage_home_dir }}/src-{{ homepage.release }}/.env
#   - Loaded automatically by Homepage dashboard on startup
#   - Restart Homepage service after changes
#
# References:
#   - https://gethomepage.dev/en/configs/
#   - https://nodejs.org/api/process.html#process_process_env
#
# Last updated: 2025-07-07
# ===============================================================================

# Runtime Environment
NODE_ENV=production

# Server Configuration
PORT={{ homepage_port }}
HOSTNAME={{ networking_homepage.hostname }}
HOMEPAGE_ALLOWED_HOSTS={{ networking_homepage.allowed_hosts }}

# Homepage Configuration
HOMEPAGE_VAR_TITLE={{ networking_homepage.title | default("Server Dashboard") }}
HOMEPAGE_VAR_THEME={{ networking_homepage.theme | default("dark") }}
HOMEPAGE_VAR_DESCRIPTION={{ networking_homepage.description | default("Management Dashboard") }}

# Optional: API Keys (if using integrations)
# HOMEPAGE_VAR_OPENWEATHERMAP_APIKEY=
# HOMEPAGE_VAR_PLEX_TOKEN=
HOMEPAGE_VAR_FINHUB_APIKEY={{ vault_finhub_api_key }}

# Logging Configuration
LOG_LEVEL={{ networking_homepage.log_level | default("info") }}