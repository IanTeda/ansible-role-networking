# =============================================================================
# Homarr Docker Compose Configuration
# =============================================================================
#
# This docker-compose.yml file configures Homarr Dashboard in a Docker container.
# Homarr is a customizable home page / application dashboard with integrations
# for various services and applications.
#
# Features:
#   - Web-based dashboard for services
#   - Integration with various services
#   - Customizable widgets and layouts
#   - Persistent configuration storage
#
# Requirements:
#   - Docker and docker-compose installed
#   - Port {{ networking_homarr.web_port }} available
#   - Data directory mounted for persistence
#
# Author: Generated by Ansible
# =============================================================================

services:
  homarr:
    image: {{ homarr_image }}:{{ homarr_image_tag | default('latest') }}
    container_name: {{ homarr_container_name }}
    restart: unless-stopped
    ports:
      - "{{ homarr_web_port }}:7575"
    env_file:
      - {{ homarr_config_dir }}/homarr.conf
    volumes:
      - {{ homarr_config_dir }}:/app/data/configs
      - {{ homarr_data_dir }}:/app/data
      - /var/run/docker.sock:/var/run/docker.sock:ro
    healthcheck:
      test: ["CMD-SHELL", "nc -z localhost 7575 || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    networks:
      - homarr_network

  redis:
    image: redis:alpine
    container_name: homarr-redis
    restart: unless-stopped
    networks:
      - homarr_network

networks:
  homarr_network:
    driver: bridge
    name: homarr_network